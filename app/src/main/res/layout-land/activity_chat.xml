<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ChatActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/top_user_fragment"
        android:name="com.insurance.chatapp.TopUserFragment"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:paddingBottom="@dimen/dimen_30_dp" />

    <View
        android:layout_width="@dimen/dimen_6_dp"
        android:layout_height="match_parent"
        android:background="@color/divider_primary" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottom_user_fragment"
        android:name="com.insurance.chatapp.BottomUserFragment"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:paddingBottom="@dimen/dimen_30_dp" />

</LinearLayout>