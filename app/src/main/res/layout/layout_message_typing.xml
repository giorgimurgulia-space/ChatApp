<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16_dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/neutral_05_lightest_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_18_dp"
        android:paddingVertical="@dimen/dimen_15_dp"
        app:layout_constraintBottom_toBottomOf="@id/medium_circle_view"
        app:layout_constraintStart_toStartOf="@id/medium_circle_view">

        <View
            android:layout_width="@dimen/dimen_6_dp"
            android:layout_height="@dimen/dimen_6_dp"
            android:background="@drawable/shape_color_background"
            android:backgroundTint="@color/neutral_04_light_grey" />

        <View
            android:layout_width="@dimen/dimen_6_dp"
            android:layout_height="@dimen/dimen_6_dp"
            android:layout_marginHorizontal="@dimen/dimen_10_dp"
            android:background="@drawable/shape_color_background"
            android:backgroundTint="@color/neutral_03_grey" />

        <View
            android:layout_width="@dimen/dimen_6_dp"
            android:layout_height="@dimen/dimen_6_dp"
            android:background="@drawable/shape_color_background"
            android:backgroundTint="@color/neutral_04_light_grey" />
    </LinearLayout>

    <View
        android:id="@+id/medium_circle_view"
        android:layout_width="@dimen/dimen_18_dp"
        android:layout_height="@dimen/dimen_18_dp"
        android:layout_marginStart="@dimen/dimen_2_dp"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/neutral_05_lightest_grey"
        app:layout_constraintBottom_toBottomOf="@id/small_circle_view"
        app:layout_constraintStart_toEndOf="@id/small_circle_view" />

    <View
        android:id="@+id/small_circle_view"
        android:layout_width="@dimen/dimen_10_dp"
        android:layout_height="@dimen/dimen_10_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/neutral_05_lightest_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>