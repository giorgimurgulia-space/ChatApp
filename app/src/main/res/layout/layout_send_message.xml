<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16_dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_textView"
        style="@style/normalMyriadGeo_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/purple_light"
        android:lineSpacingExtra="@dimen/dimen_4_sp"
        android:paddingHorizontal="@dimen/dimen_18_dp"
        android:paddingVertical="@dimen/dimen_15_dp"
        android:textAlignment="textEnd"
        android:textColor="@color/neutral_01_great_dark_grey"
        android:textSize="@dimen/dimen_14_sp"
        app:layout_constraintBottom_toBottomOf="@id/medium_circle_view"
        app:layout_constraintEnd_toEndOf="@id/medium_circle_view"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8"
        tools:text="@tools:sample/lorem" />


    <View
        android:id="@+id/medium_circle_view"
        android:layout_width="@dimen/dimen_18_dp"
        android:layout_height="@dimen/dimen_18_dp"
        android:layout_marginEnd="@dimen/dimen_2_dp"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/purple_light"
        app:layout_constraintBottom_toBottomOf="@id/small_circle_view"
        app:layout_constraintEnd_toStartOf="@id/small_circle_view" />

    <View
        android:id="@+id/small_circle_view"
        android:layout_width="@dimen/dimen_10_dp"
        android:layout_height="@dimen/dimen_10_dp"
        android:layout_marginBottom="@dimen/dimen_5_dp"
        android:background="@drawable/shape_color_background"
        android:backgroundTint="@color/purple_light"
        app:layout_constraintBottom_toBottomOf="@id/date_textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/date_textView"
        style="@style/smallMyriadGeo_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:textSize="@dimen/dimen_8_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/small_circle_view"
        tools:text="მარ 14, 16:06" />


</androidx.constraintlayout.widget.ConstraintLayout>