<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bottom_user_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/input_layout"
        tools:listitem="@layout/layout_send_message" />

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_background"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dimen_12_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/text_editText"
            style="@style/normalMyriadGeo_Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_22_dp"
            android:layout_weight="1"
            android:background="@null"
            android:fadeScrollbars="false"
            android:hint="@string/enter_your_text"
            android:lineSpacingExtra="@dimen/dimen_4_sp"
            android:maxLines="5"
            android:paddingEnd="@dimen/dimen_22_dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb_vertical"
            android:scrollbarTrackVertical="@drawable/shape_scrollbar_track_vertical"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/send_imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/dimen_12_dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/light_slate_blue"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send_icon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>