<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_text_background"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/space_12"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/text_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space_22"
            android:layout_weight="1"
            android:background="@null"
            android:fadeScrollbars="false"
            android:fontFamily="@font/myriad_geo"
            android:hint="@string/enter_your_text"
            android:lineSpacingExtra="4sp"
            android:maxLines="5"
            android:paddingEnd="@dimen/space_22"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb_vertical"
            android:scrollbarTrackVertical="@drawable/shape_scrollbar_track_vertical"
            android:scrollbars="vertical"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/send_imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/space_12"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/light_slate_blue"
            android:scaleType="centerInside"
            android:src="@drawable/ic_send_icon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>